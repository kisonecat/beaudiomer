\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{beaudiomer}
  [2020/06/11 v1.00 Beamer packages for the audio, video, wait commands]

\RequirePackage{pdftexcmds} % \pdf@escapestring, works in both pdftex, luatex
\RequirePackage{ifluatex}
\ifluatex
\protected\def\pdfannot {\pdfextension annot}
\fi

\@ifclassloaded{beamer}{%
\newcommand<>{\audio}[2][]{\only#3{\pdfannot%
{%
/Subtype /Text%
/F 1%
/T (Audio)%
/Contents (\pdf@escapestring{#2})%
}}}

\newcommand<>{\video}[2][]{\only#3{\pdfannot%
{%
/Subtype /Text%
/F 1%
/T (Video)%
/Contents (\pdf@escapestring{#2})%
}}}

\newcommand<>{\wait}[2][]{\only#3{\pdfannot%
{%
/Subtype /Text%
/F 1%
/T (Wait)%
/Contents (\pdf@escapestring{#2})%
}}}
}{%
  \PackageError{beaudiomer}{Class file not supported}{Try using the `beamer' documentclass}
}
\endinput
